## -*- coding: utf-8 -*-
<%namespace name="base" file="base_helper.tmpl" import="*"/>

<%def name="html_footer()">
<div class="custom-footer" style="display: block;">
    <div class="footer-social-icons">
        <ul class="social-icons">
            %for social_item in data['social_media']: 
                <li>
                    <a href="${social_item['url']}" rel="me" target="_blank" class="social-icons" title="${social_item['title']}"> 
                        <i class="${social_item['class']} fa-2x"></i> 
                    </a>
                </li>
            %endfor
        </ul>
    </div>
</div>

    %if content_footer:
        <footer id="footer" style="text-align: center;">
            <p>${content_footer}</p>
            ${template_hooks['page_footer']()}
        </footer>
    %endif
</%def>
